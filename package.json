{
  "name": "parcel-starter",
  "version": "1.0.1",
  "description": "Simple Web Starter for React, supports Javascript and Typescript",
  "main": "index.js",
  "scripts": {
    "start": "parcel index.html --open",
    "build": "parcel build index.html",
    "test": "jest",
    "clean": "rimraf dist .cache",
    "clean:dist": "rimraf node_modules",
    "clean:all": "yarn clean:dist && yarn clean:pkg",
    "lint:ts:cmd": "tslint -p tsconfig.json -c tslint.json",
    "lint:ts": "yarn lint:ts:cmd 'src/**/*.tsx' 'src/**/*.ts'",
    "lint:js": "eslint src/**/*.js",
    "lint": "yarn lint:js && yarn lint:ts",
    "types": "tsc --noEmit -p .",
    "types:watch": "tsc --noEmit -p . --watch",
    "validate": "yarn types && yarn lint && yarn test",
    "fix": "yarn lint:js --fix && yarn lint:ts --fix"
  },
  "keywords": [
    "starter",
    "parcel",
    "react",
    "typescript"
  ],
  "author": "Pervez Iqbal",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "7.6.4",
    "@babel/plugin-proposal-class-properties": "7.5.5",
    "@testing-library/jest-dom": "^4.1.2",
    "@testing-library/react": "^9.3.0",
    "@types/chance": "1.0.7",
    "@types/jest": "24.0.19",
    "@types/jsdom": "12.2.4",
    "@types/react-dom": "16.9.2",
    "@types/react": "16.9.9",
    "babel-eslint": "10.0.3",
    "chance": "1.1.3",
    "eslint-config-prettier": "6.4.0",
    "eslint-plugin-jest": "22.20.0",
    "eslint-plugin-prettier": "3.1.1",
    "eslint-plugin-react": "7.16.0",
    "eslint": "6.5.1",
    "husky": "3.0.9",
    "jest": "24.9.0",
    "jsdom": "15.2.0",
    "lint-staged": "9.4.2",
    "parcel-bundler": "1.12.4",
    "prettier": "1.18.2",
    "rimraf": "3.0.0",
    "ts-jest": "24.1.0",
    "tslint-config-prettier": "1.18.0",
    "tslint": "5.20.0",
    "typescript-tslint-plugin": "0.5.4",
    "typescript": "3.6.4"
  },
  "dependencies": {
    "date-fns": "2.5.1",
    "formik": "1.5.8",
    "immer": "4.0.1",
    "react": "16.10.2",
    "react-dom": "16.10.2",
    "technoidentity-utils": "^1.2.19",
    "technoidentity-devfractal": "^1.2.19",
    "use-immer": "0.3.4",
    "yup": "0.27.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-staged",
      "pre-push": "yarn validate"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "yarn lint:ts:cmd --fix",
      "yarn prettier --write",
      "git add"
    ],
    "src/**/*.{js,jsx}": [
      "yarn eslint --fix",
      "yarn prettier --write",
      "git add"
    ],
    "src/**/*.{json,css}": [
      "yarn prettier --write",
      "git add"
    ]
  }
}
